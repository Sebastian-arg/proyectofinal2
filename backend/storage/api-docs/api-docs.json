    "components": {
        "schemas": {
            "Calificacion": {
                "title": "Calificacion",
                "description": "Modelo de datos para una calificación de una inscripción.",
                "required": [
                    "inscripcion_id",
                    "nota",
                    "fecha",
                    "tipo_evaluacion"
                ],
                "properties": {
                    "id": {
                        "description": "ID único de la calificación.",
                        "type": "integer",
                        "format": "int64"
                    },
                    "inscripcion_id": {
                        "description": "ID de la inscripción asociada.",
                        "type": "integer",
                        "format": "int64"
                    },
                    "nota": {
                        "description": "Nota obtenida.",
                        "type": "number",
                        "format": "float"
                    },
                    "fecha": {
                        "description": "Fecha de la calificación.",
                        "type": "string",
                        "format": "date"
                    },
                    "tipo_evaluacion": {
                        "description": "Tipo de evaluación (e.g., 'examen', 'trabajo práctico').",
                        "type": "string",
                        "maxLength": 50
                    },
                    "created_at": {
                        "description": "Fecha y hora de creación.",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Fecha y hora de la última actualización.",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Cobro": {
                "title": "Cobro",
                "description": "Modelo de datos para un cobro relacionado a una inscripción.",
                "required": [
                    "inscripcion_id",
                    "monto",
                    "fecha_cobro",
                    "estado_cobro",
                    "metodo_de_cobro"
                ],
                "properties": {
                    "id": {
                        "description": "ID único del cobro.",
                        "type": "integer",
                        "format": "int64"
                    },
                    "inscripcion_id": {
                        "description": "ID de la inscripción asociada.",
                        "type": "integer",
                        "format": "int64"
                    },
                    "monto": {
                        "description": "Monto del cobro.",
                        "type": "number",
                        "format": "float"
                    },
                    "fecha_cobro": {
                        "description": "Fecha en que se realizó el cobro.",
                        "type": "string",
                        "format": "date"
                    },
                    "estado_cobro": {
                        "description": "Estado del cobro (e.g., 'pagado', 'pendiente', 'vencido').",
                        "type": "string",
                        "maxLength": 50
                    },
                    "metodo_de_cobro": {
                        "description": "Método utilizado para el cobro (e.g., 'tarjeta', 'efectivo').",
                        "type": "string",
                        "maxLength": 50
                    },
                    "created_at": {
                        "description": "Fecha y hora de creación.",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Fecha y hora de la última actualización.",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Curso": {
                "title": "Curso",
                "description": "Modelo de datos para un curso.",
                "required": [
                    "docente_id",
                    "nombre",
                    "descripcion",
                    "temario",
                    "fecha_inicio",
                    "fecha_fin",
                    "cupo",
                    "precio",
                    "estado"
                ],
                "properties": {
                    "id": {
                        "description": "ID único del curso.",
                        "type": "integer",
                        "format": "int64"
